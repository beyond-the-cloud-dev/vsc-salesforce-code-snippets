{
  "name": "salesforce-snippets-beyondthecloud",
  "displayName": "Salesforce Snippets",
  "description": "Snippets for Salesforce Apex and LWC",
  "icon": "images/logo.png",
  "version": "1.2.4",
  "publisher": "BeyondTheCloud",
  "repository": "https://github.com/beyond-the-cloud-dev/vsc-salesforce-code-snippets",
  "engines": {
    "vscode": "^1.0.0"
  },
  "scripts": {
    "deploy": "vsce publish",
    "deploy-patch": "vsce publish patch",
    "deploy-minor": "vsce publish minor",
    "deploy-major": "vsce publish major"
  },
  "categories": [
    "Snippets"
  ],
  "keywords": [
    "snippets",
    "salesforce",
    "apex",
    "lwc",
    "lightning components"
  ],
  "contributes": {
    "snippets": [
      {
        "language": "apex",
        "path": "./snippets/apex.json"
      },
      {
        "language": "html",
        "path": "./snippets/lwc-html.json"
      },
      {
        "language": "javascript",
        "path": "./snippets/lwc-js.json"
      },
      {
        "language": "xml",
        "path": "./snippets/lwc-xml.json"
      }
    ]
  },
  "devDependencies": {
    "vsce": "^2.11.0"
  }
}
